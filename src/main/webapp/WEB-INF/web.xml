<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>employemanagement</display-name>


	<welcome-file-list>
		<welcome-file>adminuser.html</welcome-file>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>indexo</servlet-name>
		<servlet-class>employemanagement.MainPage</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>indexo</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>employemanagement.LoginP</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/inde</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>create</servlet-name>
		<servlet-class>employemanagement.Management</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>create</servlet-name>
		<url-pattern>/creat</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>display</servlet-name>
		<servlet-class>employemanagement.DisplayDetails</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>display</servlet-name>
