	</servlet>
	<servlet-mapping>
		<servlet-name>adminDashbord</servlet-name>
		<url-pattern>/adminDashbored</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>user</servlet-name>
		<servlet-class>employemanagement.UserView</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>




	<servlet>
		<servlet-name>Updatinguser1</servlet-name>
		<servlet-class>employemanagement.DisplayDetails</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Updatinguser1</servlet-name>
		<url-pattern>/displayingDetailsAgain</url-pattern>
	</servlet-mapping>


	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error.html</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/error.html</location>
	</error-page>

</web-app>