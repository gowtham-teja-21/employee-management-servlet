	</servlet-mapping>

	<servlet>
		<servlet-name>deleteing</servlet-name>
		<servlet-class>employemanagement.DeleteDetails</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteing</servlet-name>
		<url-pattern>/del</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Updatinguser</servlet-name>
		<servlet-class>employemanagement.UpdateUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Updatinguser</servlet-name>
		<url-pattern>/updateuser</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>employemanagement.AdminView</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>adminValidation</servlet-name>
		<servlet-class>employemanagement.AdminValidation</servlet-class>
	</servlet>
